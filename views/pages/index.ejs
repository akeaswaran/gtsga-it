<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="description" content="">
  <meta name="author" content="Akshay Easwaran">
  <link rel="stylesheet" href="lib/bootstrap/css/bootstrap.min.css">
  <link rel="stylesheet" href="lib/jquery-ui/jquery-ui.min.css">
  <style>
	h1 {
		display: inline-block;
	}
	.header-button {
		display: inline-block;
		margin-top: 10px;
	}

	button > .card-button {
		text-color: gray;
	}
  </style>
	<title>GT SGA IT Committee - Project Queue</title>
</head>
<body>
  <div class="container-fluid">
    <div class="modal fade" id="newCardModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title" id="myModalLabel">New Card</h4>
          </div>
          <div class="modal-body">
            <form id="newCardForm">
             <div class="form-group">
               <label for="card-title" class="control-label">Title</label>
               <input type="text" class="form-control" id="card-title" minlength="1" placeholder="New Card" required>
             </div>
             <div class="form-group">
               <label for="card-description" class="control-label">Description</label>
               <textarea class="form-control" id="card-description" minlength="1" placeholder="Description" required></textarea>
             </div>
						 <div class="form-group">
               <label for="card-author" class="control-label">Author</label>
               <input type="text" class="form-control" id="card-author" minlength="1" placeholder="George P. Burdell" required>
             </div>
						 <div class="form-group">
               <label for="card-authoremail" class="control-label">Author Email</label>
               <input type="email" class="form-control" id="card-authoremail" placeholder="gpb27@gatech.edu" required>
             </div>
           </form>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
            <button type="button" class="btn btn-success" id="saveButton">Save</button>
          </div>
        </div>
      </div>
    </div>

    <div class="page-header">
			<div class="row">
		  	<div class="col-md-6"><h1>Georgia Tech SGA IT Committee <small>Project Queue</small></h1></div>
		  	<div class="col-md-6"><button type="button" id="addCard" class="btn btn-default btn-lg pull-right header-button" autocomplete="off" data-toggle="modal" data-target="#newCardModal"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span> Create Card</button></div>
			</div>
    </div>

		<div id="errorMsg" class="alert alert-danger alert-dismissible hidden" role="alert">
	  	<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
	  	<strong>Error!</strong> <span id="errorText"> error message goes here.</span>
		</div>

		<div id="successMsg" class="alert alert-success alert-dismissible hidden" role="alert">
	  	<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
	  	<strong>Success!</strong> <span id="successText"> success message goes here.</span>
		</div>

    <div class="wells">
      <div class="col-md-4">
        <h3>Backlog</h3>
        <div class="well" id="backlogWell">
        </div>
      </div>
      <div class="col-md-4">
        <h3>In Progress</h3>
        <div class="well" id="progressWell">
        </div>
      </div>
      <div class="clearfix visible-xs-block"></div>
      <div class="col-md-4">
        <h3>Done</h3>
        <div class="well" id="doneWell">
        </div>
      </div>
    </div>
  </div>

<script src="lib/jquery-1.12.0.min.js"></script>
<script src="lib/jquery-ui/jquery-ui.min.js"></script>
<script src="lib/bootstrap/js/bootstrap.min.js"></script>
<script>
function deleteCard(cardId) {
	if(confirm('Do you want to delete this card?')) {
		$.ajax({
				type: 'DELETE',
				contentType: 'application/json',
				dataType: 'json',
				url: '/cards/' + cardId,
				success: function(data) {
					var card = data;
					$('#card-' + cardId).remove();
				},
				error: function(error) {
					if (error.status != 200) {
						$('#errorText').html(error.message);
						$('#errorMsg').show();
					} else {
						$('#card-' + cardId).remove();
					}
				 }
		});
	}
}

function createCard(card) {
	console.log('CARD: ' + JSON.stringify(card));
	var deleteString = 'deleteCard(\'' + card._id + '\')';
	var cardHtml = '<div id="card-' + card._id + '" class="panel panel-info card backlog"><div class="panel-heading">' + card.title + '<button type="button" class="close" onClick="' + deleteString + '" aria-label="Close"><span aria-hidden="true">&times;</span></button></div><div class="panel-body"><p>' + card.description + '</p></div><div class="panel-footer">created by <a href=\"mailto:' + card.authorEmail + '\">' + card.author + '</a></div></div>';
	$('#backlogWell').append(cardHtml);
	$('.card').draggable({
		containment: '.container-fluid',
		stack: '.wells',
		snap: '.well',
		snapTolerance: '20px',
		snapMode: 'inner',
		cursor: 'move',
		revert: true
	});
}

function addCard(cardDict) {
	$.ajax({
			type: 'POST',
			data: JSON.stringify(cardDict),
			contentType: 'application/json',
			dataType: 'json',
			url: '/cards',
			success: function(data) {
				var card = data;
				createCard(card);
				$('#card-title').val('');
				$('#card-description').val('');
				$('#card-author').val('');
				$('#card-authoremail').val('');
			},
			error: function(error) {
					$('#errorText').html(error.message);
					$('#errorMsg').show();
			 }
	});
}

$(document).ready(function() {
	var numCards = 0;
	$.get('/cards', function(data) {
		numCards = data.length;
		for (var i = 0; i < data.length; i++) {
			var card = data[i];
			createCard(card);
		}
	});

	$('#progressWell').droppable({
		accept: '.card',
		drop: function(ev, ui) {
		 var dropped = ui.draggable;
		 var droppedOn = $(this);
		 $(dropped).detach().css({top: 0,left: 0}).appendTo(droppedOn);
		 $(dropped).removeClass('backlog');
		 $(dropped).removeClass('done');
		 $(dropped).addClass('in-progress');
		 $(dropped).removeClass('panel-info');
		 $(dropped).removeClass('panel-success');
		 $(dropped).addClass('panel-warning');
		}
	});

	$('#backlogWell').droppable({
		accept: '.card',
		drop: function(ev, ui) {
		 var dropped = ui.draggable;
		 var droppedOn = $(this);
		 $(dropped).detach().css({top: 0,left: 0}).appendTo(droppedOn);
		 $(dropped).addClass('backlog');
		 $(dropped).removeClass('done');
		 $(dropped).removeClass('in-progress');
		 $(dropped).addClass('panel-info');
		 $(dropped).removeClass('panel-success');
		 $(dropped).removeClass('panel-warning');
		}
	});

	$('#doneWell').droppable({
		accept: '.card',
		drop: function(ev, ui) {
		 var dropped = ui.draggable;
		 var droppedOn = $(this);
		 $(dropped).detach().css({top: 0,left: 0}).appendTo(droppedOn);
		 $(dropped).removeClass('backlog');
		 $(dropped).addClass('done');
		 $(dropped).removeClass('in-progress');
		 $(dropped).removeClass('panel-info');
		 $(dropped).addClass('panel-success');
		 $(dropped).removeClass('panel-warning');
		}
	});

	$('#saveButton').on('click', function(event) {
		event.preventDefault();
		$('#newCardModal').modal('toggle');
		if ($.trim($('#card-title').val()).length > 0 && $.trim($('#card-description').val()).length > 0 && $.trim($('#card-author').val()).length > 0 && $.trim($('#card-authoremail').val()).length > 0) {
			var card = {
				"title" : $('#card-title').val(),
				"description" : $('#card-description').val(),
				"author": $('#card-author').val(),
				"authorEmail" : $('#card-authoremail').val()
			};
			console.log('VALID INPUT - CARD: ' + JSON.stringify(card));
			addCard(card);
		} else {
			console.log('INVALID INPUT');
			$('#errorText').html('You\'ve input invalid data for this card. Please fix the information and try again.');
			$('#errorMsg').show();
		}
	});
});
</script>
</body>
</html>
